rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Documents folder - authenticated users can read/write
    match /documents/{projectId}/{allPaths=**} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;

      // Allow write if user is authenticated and file is under 50MB
      allow write: if request.auth != null
                   && request.resource.size < 50 * 1024 * 1024;
    }

    // User avatars (for future use)
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can read avatars
      allow read: if true;

      // Only the user can write their own avatar
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
