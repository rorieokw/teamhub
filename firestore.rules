rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth.token.email == 'rorieokw@gmail.com';
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read users (for member lookups)
      allow read: if request.auth != null;

      // Users can create/update their own profile, admins can update any user
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null
                    && (request.auth.uid == userId || isAdmin());
    }

    // Projects collection
    match /projects/{projectId} {
      // Authenticated users can read projects (filter by membership in app)
      allow read: if request.auth != null;

      // Authenticated users can create projects
      allow create: if request.auth != null;

      // Members can update, OR any authenticated user can join (add themselves to members), OR admin
      allow update: if request.auth != null
                    && (request.auth.uid in resource.data.members
                        || request.auth.uid in request.resource.data.members
                        || isAdmin());

      // Creator or admin can delete
      allow delete: if request.auth != null
                    && (request.auth.uid == resource.data.createdBy || isAdmin());
    }

    // Milestones collection
    match /milestones/{milestoneId} {
      // Authenticated users can read/write milestones
      // (project-level access should be checked in app logic)
      allow read, write: if request.auth != null;
    }

    // Tasks collection
    match /tasks/{taskId} {
      // Authenticated users can read/write tasks
      allow read, write: if request.auth != null;
    }

    // Messages collection
    match /messages/{messageId} {
      // Authenticated users can read/write messages
      allow read, write: if request.auth != null;
    }

    // Documents collection (file metadata)
    match /documents/{documentId} {
      // Authenticated users can read/write documents
      allow read, write: if request.auth != null;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // System can create notifications for any user
      allow create: if request.auth != null;

      // Users can only update their own notifications (mark as read)
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }

    // Project Invites collection
    match /projectInvites/{inviteId} {
      // Authenticated users can read invites (filter in app by email)
      allow read: if request.auth != null;

      // Authenticated users can create invites
      allow create: if request.auth != null;

      // Anyone can update (accept/decline) invites
      allow update: if request.auth != null;

      // Creator can delete invites
      allow delete: if request.auth != null;
    }

    // Read status for chat (unread indicators)
    match /readStatus/{userId} {
      // Users can only read/write their own read status
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // User stats for ranking system
    match /userStats/{userId} {
      // Anyone authenticated can read stats (for displaying ranks)
      allow read: if request.auth != null;

      // Users can only write their own stats
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // Activities collection
    match /activities/{activityId} {
      // Authenticated users can read/write activities
      allow read, write: if request.auth != null;
    }

    // Task comments subcollection
    match /tasks/{taskId}/comments/{commentId} {
      // Authenticated users can read/write comments
      allow read, write: if request.auth != null;
    }

    // User presence
    match /presence/{userId} {
      // Anyone can read presence
      allow read: if request.auth != null;

      // Users can only write their own presence
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // Polls collection
    match /polls/{pollId} {
      // Authenticated users can read polls
      allow read: if request.auth != null;

      // Authenticated users can create polls
      allow create: if request.auth != null;

      // Authenticated users can update polls (for voting)
      allow update: if request.auth != null;

      // Only creator can delete polls
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.createdBy;
    }

    // Events collection (calendar)
    match /events/{eventId} {
      // Authenticated users can read events
      allow read: if request.auth != null;

      // Authenticated users can create events
      allow create: if request.auth != null;

      // Authenticated users can update events
      allow update: if request.auth != null;

      // Only creator can delete events
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.createdBy;
    }

    // Announcements collection
    match /announcements/{announcementId} {
      // Authenticated users can read announcements
      allow read: if request.auth != null;

      // Authenticated users can create announcements
      allow create: if request.auth != null;

      // Authenticated users can update (for dismissing)
      allow update: if request.auth != null;

      // Only creator can delete announcements
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.createdBy;
    }

    // Pinned items collection (user-specific)
    match /pinnedItems/{pinnedId} {
      // Users can only read their own pinned items
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // Users can only create pinned items for themselves
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.userId;

      // Users can only delete their own pinned items
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }

    // Work sessions collection (live coding indicator)
    match /workSessions/{sessionId} {
      // Authenticated users can read all sessions (to see who's working)
      allow read: if request.auth != null;

      // Users can only create sessions for themselves
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.userId;

      // Users can only update their own sessions
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId;

      // Users can only delete their own sessions
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }

    // System announcements (admin only)
    match /systemAnnouncements/{announcementId} {
      // Anyone can read announcements
      allow read: if request.auth != null;

      // Only admins can create/update/delete
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // Admin activity logs (admin only)
    match /adminLogs/{logId} {
      // Only admins can read logs
      allow read: if request.auth != null && isAdmin();

      // Only admins can create logs
      allow create: if request.auth != null && isAdmin();
    }

    // App settings (admin managed, everyone can read)
    match /settings/{settingId} {
      // Anyone authenticated can read settings (needed for whitelist check)
      allow read: if request.auth != null;

      // Only admins can create/update settings
      allow create, update: if request.auth != null && isAdmin();
    }

    // Sticky notes (personal notes for each user)
    match /stickyNotes/{noteId} {
      // Users can only read their own notes
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // Users can only create notes for themselves
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.userId;

      // Users can only update/delete their own notes
      allow update, delete: if request.auth != null
                            && request.auth.uid == resource.data.userId;
    }

    // Dashboard layouts (personal widget arrangement)
    match /dashboardLayouts/{userId} {
      // Users can only read their own layout
      allow read: if request.auth != null
                  && request.auth.uid == userId;

      // Users can only create/update their own layout
      allow create, update: if request.auth != null
                            && request.auth.uid == userId;
    }

    // Coin flip challenges collection
    match /coinFlips/{flipId} {
      // Players can read their own flips
      allow read: if request.auth != null
                  && (request.auth.uid == resource.data.challengerId
                      || request.auth.uid == resource.data.opponentId);

      // Allow reading flips where user is a participant (for queries)
      allow list: if request.auth != null;

      // Authenticated users can create challenges
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.challengerId;

      // Participants can update (for accepting/declining/completing)
      allow update: if request.auth != null
                    && (request.auth.uid == resource.data.challengerId
                        || request.auth.uid == resource.data.opponentId);
    }

    // Chess games collection
    match /chessGames/{gameId} {
      // Players can read their own games
      allow read: if request.auth != null
                  && (request.auth.uid == resource.data.whitePlayerId
                      || request.auth.uid == resource.data.blackPlayerId);

      // Allow reading games where user is a player (for queries)
      allow list: if request.auth != null;

      // Authenticated users can create games (to challenge)
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.challengerId;

      // Players can update their games (for moves, accepting/declining)
      allow update: if request.auth != null
                    && (request.auth.uid == resource.data.whitePlayerId
                        || request.auth.uid == resource.data.blackPlayerId);
    }

    // Audio/Video calls collection
    match /calls/{callId} {
      // Participants can read calls they're in
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.participants;

      // Allow querying for calls (for incoming call detection)
      allow list: if request.auth != null;

      // Authenticated users can create calls
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.callerId;

      // Participants can update calls (for status changes)
      allow update: if request.auth != null
                    && request.auth.uid in resource.data.participants;

      // WebRTC signaling subcollection
      match /signals/{signalId} {
        allow read, write: if request.auth != null;
      }

      // ICE candidates subcollection
      match /candidates/{candidateId} {
        allow read, write: if request.auth != null;
      }
    }

    // Poker games collection
    match /pokerGames/{gameId} {
      // Authenticated users can read all games (for lobby)
      allow read: if request.auth != null;

      // Authenticated users can create games
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.createdBy;

      // Authenticated users can update games (for joining, leaving, playing)
      allow update: if request.auth != null;

      // Anyone can delete poker games (for cleanup)
      allow delete: if request.auth != null;
    }

    // Blackjack games collection
    match /blackjackGames/{gameId} {
      // Authenticated users can read all games (for lobby)
      allow read: if request.auth != null;

      // Authenticated users can create games
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.createdBy;

      // Authenticated users can update games (for joining, leaving, playing)
      allow update: if request.auth != null;

      // Anyone can delete blackjack games (for cleanup)
      allow delete: if request.auth != null;
    }

    // Mahjong games collection
    match /mahjongGames/{gameId} {
      // Authenticated users can read all games (for lobby)
      allow read: if request.auth != null;

      // Authenticated users can create games
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.createdBy;

      // Authenticated users can update games (for joining, leaving, playing)
      allow update: if request.auth != null;

      // Anyone can delete mahjong games (for cleanup)
      allow delete: if request.auth != null;
    }
  }
}
